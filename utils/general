##################################################
#                GENERAL ALIASES                 #
##################################################

alias history='fc -l 1'
alias grep='grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'

# Show the diff between two commands
# Usage : DIFF "ls -l" "ls-la"
DIFF() {
  diff <($1) <($2)
}

# GREP find in file : GREP . string
GREP (){
    grep --color=auto -nRHIi --no-messages "$2" "$1" 
}

# FIND find filename : FIND . filename
FIND (){
    find "$1" -print | grep -i "$2"
}

alias TOP='top -u $USER'

alias SSHADD='eval `ssh-agent` && ssh-add'

##################################################
#                  LS ALIASES                    #
##################################################

# alias l='ls -lahF --color=auto' # is defined in a function to support less on files

alias ls='ls --color=auto'
alias lg='ls --group-directories-first'
alias ll='lg -lh'
alias la='lg -lAh'
alias lrt='ls -lahFrt'
alias lr='lrt'

# list directories when no arguments are provided,
# list directories of the argument if the argument is a directory
# use less on the argumetn if the argument is a file
myls() {
    if [[ $# -eq 0 || -d $1 ]]; then
        ls $1 -lahF
    else
        less $1
    fi
}
alias l="myls"


##################################################
#               NAVIGATION ALIASES               #
##################################################

# Thanks to Jean Pourroy.
# pwd that can take argument : pwd | pwd File1 File2
# Will output the absolute path to provided file
mypwd() {
    if [[ $# -eq 0 ]]; then
        builtin pwd
    else
        for arg in "$@"; do
            if [[ -e "$arg" ]]; then
                echo "$(realpath "$arg")"
            else
                echo "Custom pwd error. Invalid arg: $arg"
            fi
        done
    fi
}
# shadows default "pwd"
alias pwd='mypwd "$@"'

# Thanks to Jean Pourroy.
# Change directory even if it is a filename, then list files
# Shadows default "cd"
cd() {
    if [[ -f "$1" ]]; then
        cd "$(dirname "$1")"
    else
        builtin cd "$@"
        # uses alias ll defined above
        ll
    fi
}


