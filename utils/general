##################################################
#            FILES AND FOLDERS ALIASES           #
##################################################
alias mkdir='mkdir -p'

# safe file manipulation
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

# cd the latest directory created
alias cdd='cd $(ls -dt */ | head -1)'

# create and cd into dir
mkcd() {
    mkdir -p "$1" && cd "$1"
}

